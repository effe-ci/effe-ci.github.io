---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Portfolio Access" description="Password protected access">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-accent/5 to-purple-50 px-6">
    <div class="max-w-md w-full">
      <div class="bg-white rounded-2xl shadow-xl p-8 border-2 border-border">
        <div class="text-center mb-8">
          <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h1 class="text-h2 font-serif font-bold text-text-primary mb-2">Portfolio Access</h1>
          <p class="text-body text-text-secondary">This portfolio is currently in progress</p>
        </div>

        <form id="loginForm" class="space-y-6">
          <div>
            <label for="password" class="block text-body font-semibold text-text-primary mb-2">
              Enter Password
            </label>
            <input
              type="password"
              id="password"
              class="w-full px-4 py-3 border-2 border-border rounded-lg focus:outline-none focus:border-accent transition-colors text-body"
              placeholder="Password"
              autocomplete="off"
            />
          </div>

          <div id="error" class="hidden bg-red-50 border-2 border-red-200 text-red-700 px-4 py-3 rounded-lg text-body-sm">
            Incorrect password. Please try again.
          </div>

          <button
            type="submit"
            class="w-full bg-accent text-white py-3 rounded-lg hover:bg-[#0E7490] transition-colors text-body font-semibold"
          >
            Access Portfolio
          </button>
        </form>

        <div class="mt-6 text-center">
          <p class="text-body-sm text-text-secondary">
            Need access? Contact me at
            <a href="mailto:effe.christina@gmail.com" class="text-accent hover:underline">
              effe.christina@gmail.com
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  const CORRECT_PASSWORD = 'portfolio2026'; // Change this to your desired password

  // Check if already authenticated
  if (sessionStorage.getItem('authenticated') === 'true') {
    const returnUrl = new URLSearchParams(window.location.search).get('return') || '/';
    window.location.href = returnUrl;
  }

  const form = document.getElementById('loginForm') as HTMLFormElement;
  const passwordInput = document.getElementById('password') as HTMLInputElement;
  const errorDiv = document.getElementById('error') as HTMLDivElement;

  form.addEventListener('submit', (e) => {
    e.preventDefault();

    if (passwordInput.value === CORRECT_PASSWORD) {
      sessionStorage.setItem('authenticated', 'true');
      const returnUrl = new URLSearchParams(window.location.search).get('return') || '/';
      window.location.href = returnUrl;
    } else {
      errorDiv.classList.remove('hidden');
      passwordInput.value = '';
      passwordInput.focus();

      // Hide error after 3 seconds
      setTimeout(() => {
        errorDiv.classList.add('hidden');
      }, 3000);
    }
  });
</script>
