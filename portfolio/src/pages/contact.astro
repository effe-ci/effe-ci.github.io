---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
---

<Layout
  title="Contact"
  description="Get in touch with Cris for UX design roles in Z端rich or freelance web development projects. Available for consultation and collaboration."
>
  <!-- Hero -->
  <section class="px-6 md:px-20 py-20 md:py-32">
    <div class="max-w-4xl mx-auto text-center">
      <div class="inline-block px-4 py-2 bg-accent/10 rounded-full mb-6">
        <span class="text-body-sm font-medium text-accent">Get in Touch</span>
      </div>

      <h1 class="text-h1-mobile md:text-h1 font-serif font-bold text-text-primary mb-6">
        Let's Work Together
      </h1>
      <p class="text-body-lg text-text-secondary leading-relaxed max-w-2xl mx-auto">
        I'm currently open to UX design roles in Z端rich and freelance web development
        projects. Whether you're looking for someone to join your team or need help
        bringing a digital product to life, I'd love to hear from you.
      </p>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="px-6 md:px-20 py-20 bg-secondary/30">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-8 lg:gap-12">
        <!-- Left: Form -->
        <div class="lg:col-span-3">
          <div class="bg-white p-8 md:p-10 rounded-2xl border border-border shadow-medium">
            <h2 class="text-h4 font-serif font-bold text-text-primary mb-8">Send a Message</h2>

            <form
              action="https://formspree.io/f/YOUR_FORM_ID"
              method="POST"
              class="space-y-6"
              id="contact-form"
            >
              <!-- Name -->
              <div>
                <label for="name" class="block text-body font-medium text-text-primary mb-3">
                  Name *
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-border rounded-lg text-body text-text-primary focus:border-accent focus:ring-2 focus:ring-accent/20 focus:outline-none transition-all"
                  placeholder="Your name"
                />
              </div>

              <!-- Email -->
              <div>
                <label for="email" class="block text-body font-medium text-text-primary mb-3">
                  Email *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-border rounded-lg text-body text-text-primary focus:border-accent focus:ring-2 focus:ring-accent/20 focus:outline-none transition-all"
                  placeholder="your.email@example.com"
                />
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block text-body font-medium text-text-primary mb-3">
                  Message *
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="8"
                  required
                  class="w-full px-4 py-3 border border-border rounded-lg text-body text-text-primary focus:border-accent focus:ring-2 focus:ring-accent/20 focus:outline-none transition-all resize-none"
                  placeholder="Tell me about your project or opportunity..."
                ></textarea>
              </div>

              <!-- Submit Button -->
              <div>
                <Button variant="primary" size="large">
                  Send Message
                </Button>
              </div>

              <!-- Privacy & Response Info -->
              <div class="pt-6 border-t border-border space-y-2">
                <p class="text-body-sm text-text-secondary">
                  Your information will only be used to respond to your inquiry.
                </p>
                <p class="text-body-sm text-text-secondary">
                  I typically respond within 24-48 hours.
                </p>
              </div>

              <!-- Status Messages -->
              <div id="form-status" class="hidden mt-4"></div>
            </form>
          </div>
        </div>

        <!-- Right: Contact Info & Quick Links -->
        <div class="lg:col-span-2 space-y-6">
          <!-- Direct Contact -->
          <div class="bg-gradient-to-br from-accent/5 to-purple-50 p-6 rounded-2xl border border-accent/20">
            <div class="flex items-start gap-3 mb-4">
              <div class="w-10 h-10 rounded-full bg-accent/10 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-body font-semibold text-text-primary mb-2">Email</h3>
                <a
                  href="mailto:effe.christina@gmail.com"
                  class="text-body-sm text-accent hover:underline break-all"
                >
                  effe.christina@gmail.com
                </a>
              </div>
            </div>
          </div>

          <!-- Location -->
          <div class="bg-white p-6 rounded-2xl border border-border">
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 rounded-full bg-secondary flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-body font-semibold text-text-primary mb-2">Location</h3>
                <p class="text-body-sm text-text-secondary">Z端rich, Switzerland</p>
              </div>
            </div>
          </div>

          <!-- Availability -->
          <div class="bg-white p-6 rounded-2xl border border-border">
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 rounded-full bg-green-50 flex items-center justify-center flex-shrink-0">
                <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
              </div>
              <div>
                <h3 class="text-body font-semibold text-text-primary mb-2">Availability</h3>
                <p class="text-body-sm text-text-secondary">Currently available for UX design roles and freelance projects</p>
              </div>
            </div>
          </div>

          <!-- What I'm Looking For -->
          <div class="bg-white p-6 rounded-2xl border border-border">
            <h3 class="text-body font-semibold text-text-primary mb-4">I'm Open To</h3>
            <ul class="space-y-3">
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-accent mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-body-sm text-text-secondary">UX/UI design roles in Z端rich</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-accent mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-body-sm text-text-secondary">Freelance web development projects</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-accent mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-body-sm text-text-secondary">Consulting & collaboration</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Form submission handling (if using Formspree with AJAX)
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const formStatus = document.getElementById('form-status');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);

    try {
      const response = await fetch(form.action, {
        method: 'POST',
        body: formData,
        headers: {
          'Accept': 'application/json'
        }
      });

      if (response.ok) {
        formStatus!.innerHTML = '<p class="text-body text-green-600">Thanks for reaching out! I\'ll get back to you within 24-48 hours.</p>';
        formStatus!.classList.remove('hidden');
        form.reset();
      } else {
        throw new Error('Form submission failed');
      }
    } catch (error) {
      formStatus!.innerHTML = '<p class="text-body text-red-600">Oops, something went wrong. Please try again or email me directly at effe.christina@gmail.com</p>';
      formStatus!.classList.remove('hidden');
    }
  });
</script>
