---
interface Props {
  title: string;
  type: string;
  year: string;
  brief: string;
  href: string;
  image?: string;
  tags?: string[];
}

const { title, type, year, brief, href, image, tags = [] } = Astro.props;
---

<article class="group relative bg-white border border-border rounded p-6 transition-all duration-300 ease-out hover:shadow-[0_1.333rem_2.778rem_rgba(0,0,0,0.04)]">
  <a href={href} class="block">
    <!-- Image Thumbnail (if provided) -->
    {image && (
      <div class="aspect-video bg-tertiary rounded mb-6 overflow-hidden">
        <img
          src={image}
          alt={title}
          class="w-full h-full object-cover transition-transform duration-300 ease-out group-hover:scale-[1.002]"
          loading="lazy"
        />
      </div>
    )}

    <!-- Tags -->
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {tags.map(tag => (
          <span class="text-caption text-text-secondary font-medium bg-secondary px-3.5 py-1.5 rounded-full border border-border">
            {tag}
          </span>
        ))}
      </div>
    )}

    <!-- Type and Year -->
    <div class="flex items-center gap-2.5 mb-3">
      <span class="text-body-sm text-accent font-semibold">{type}</span>
      <span class="w-1 h-1 rounded-full bg-border"></span>
      <span class="text-body-sm text-text-tertiary font-medium">{year}</span>
    </div>

    <!-- Title -->
    <h3 class="text-h3-mobile md:text-h3 font-serif font-bold text-text-primary mb-4">
      {title}
    </h3>

    <!-- Brief Description -->
    <p class="text-body text-text-secondary leading-relaxed mb-6">
      {brief}
    </p>

    <!-- View Project Link -->
    <div class="inline-flex items-center text-body-sm text-text-primary font-medium">
      <span>View Project</span>
      <svg class="w-4 h-4 ml-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </div>
  </a>
</article>
